{
  "name": "Cutscene Viewer",
  "version": "3.0.0",
  "manifest_version": 1,
  "author": "pintice",
  "icon": "/icon.png",
  "action": {
    "title": "Cutscene Viewer",
    "icon": "/icon.png",
    "popover": "/cutscene.html",
    "height": 500,
    "width": 300
  },
  "description": "Send synced cutscenes to your players.",
  "permissions": [
    {
      "name": "clipboard-write",
      "reason": "Copy links to clipboard"
    },
    {
      "name": "clipboard-read",
      "reason": "Paste links from clipboard"
    },
    {
      "name": "autoplay",
      "reason": "Autoplay videos when shared"
    }
  ]
}